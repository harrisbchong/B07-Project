<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uoft_blue"
    tools:context=".StudentFrontPage">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="@string/front_page_title"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/admin_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/front_page_admin_login"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:backgroundTint="@color/button_tint" />

        <Button
            android:id="@+id/student_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/front_page_student_login"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:backgroundTint="@color/button_tint" />

        <Button
            android:id="@+id/student_signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/front_page_signup"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:backgroundTint="@color/button_tint" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="312dp"
        android:layout_height="213dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/utsclogo"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:contentDescription="@string/logo_content_description" />

</androidx.constraintlayout.widget.ConstraintLayout>