<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/button_tint"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/course_taken"
        android:layout_width="153dp"
        android:layout_height="30dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/blue_rounded_edittext"
        android:text="@string/course_taken"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/academic_history"
        android:layout_width="181dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/grey_rounded_edittext"
        android:text="@string/academic_history"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/slbackbt3"
        android:layout_width="54dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:drawableBottom="@drawable/arrow_left"
        app:backgroundTint="@color/white"
        app:cornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_course_taken"
        android:layout_width="416dp"
        android:layout_height="479dp"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/toCourseView"
        android:layout_width="67dp"
        android:layout_height="71dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="53dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:srcCompat="@drawable/add_button" />
</androidx.constraintlayout.widget.ConstraintLayout>