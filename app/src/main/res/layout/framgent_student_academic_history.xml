<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/button_tint"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/course_taken"
        android:layout_width="160dp"
        android:layout_height="44.5dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/blue_rounded_edittext"
        android:paddingTop="8dp"
        android:text="@string/course_taken"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/academic_history"
        android:layout_width="206.7dp"
        android:layout_height="44.5dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/grey_rounded_edittext"
        android:gravity="center"
        android:paddingRight="15dp"
        android:text="@string/academic_history"
        android:textColor="@color/uoft_blue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/slbackbt3"
        android:layout_width="54dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:drawableBottom="@drawable/arrow_left"
        app:backgroundTint="@color/white"
        app:cornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_course_taken"
        android:layout_width="416dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/sbcbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_taken" />

    <ImageButton
        android:id="@+id/sbcbt"
        android:layout_width="91dp"
        android:layout_height="77dp"
        android:layout_marginBottom="25dp"
        android:background="#00FFFFFF"
        android:scaleX="3"
        android:scaleY="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:srcCompat="@drawable/paper_plus" />
</androidx.constraintlayout.widget.ConstraintLayout>