<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/UI_background"
        tools:context=".StudentFrontPage">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/courseOffering"
            android:layout_width="206.7dp"
            android:layout_height="44.5dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/grey_rounded_edittext"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/course_offering"
            android:textColor="@color/uoft_blue"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/courseCodes"
            android:layout_width="160dp"
            android:layout_height="44.5dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/blue_rounded_edittext"
            android:gravity="start|center_vertical"
            android:text="@string/course_codes"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/courses"
            android:layout_width="370dp"
            android:layout_height="475dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/courseCodes" />

        <Button
            android:id="@+id/adminViewBack"
            android:layout_width="54dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:drawableBottom="@drawable/arrow_left"
            app:backgroundTint="@color/white"
            app:cornerRadius="100dp"
            app:layout_constraintEnd_toStartOf="@+id/courseOffering"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>