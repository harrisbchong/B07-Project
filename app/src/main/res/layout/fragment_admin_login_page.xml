<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uoft_blue"
    tools:context=".AdminLoginPage">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/abackbt"
        android:layout_width="54dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:drawableBottom="@drawable/arrow_left"
        app:backgroundTint="@color/white"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toStartOf="@+id/courseOffering"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/utsclogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:contentDescription="@string/logo_content_description" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="288.8dp"
        android:layout_height="59dp"
        android:layout_marginBottom="348dp"
        android:background="@drawable/white_rounded_edittext"
        android:gravity="center"
        android:paddingRight="15dp"
        android:text="Admin Login"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/admin_email_address_input"
        android:layout_width="288.8dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/white_rounded_edittext"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/admin_password_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/admin_password_input"
        android:layout_width="288.8dp"
        android:layout_height="48dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/white_rounded_edittext"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="20sp" />

    <Button
        android:id="@+id/admin_login_submit"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/password_icon"
        android:paddingLeft="45dp"
        android:text="@string/student_login_submit_text"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:backgroundTint="@color/white"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_password_input" />

    <CheckBox
        android:id="@+id/Arem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember ME"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/admin_login_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_password_input" />


</androidx.constraintlayout.widget.ConstraintLayout>